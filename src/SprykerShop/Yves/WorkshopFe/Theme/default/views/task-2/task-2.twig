{% extends template('page-layout-main') %}

{% define data = {
    title: 'WorkshopFe (task 2)',

    task: _view.task,
    cars: _view.cars,
    questions: _view.questions
}%}

{% block content %}
    {% include molecule('display', 'WorkshopFe') with {
        data: {
            cars: data.cars
        }
    } only %}

    {% include molecule('questionnaire', 'WorkshopFe') with {
        data: {
            questions: data.questions
        }
    } only %}

    {% include molecule('form', 'WorkshopFe') with {
        data: {
            task: data.task,
            cars: data.cars
        }
    } only %}
{% endblock %}

{% block footer %}{% endblock %}
